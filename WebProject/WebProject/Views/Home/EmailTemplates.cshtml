@model List<EmailTemplateModel>
@{
    Layout = "_Layout";
}
@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        <h1>@ViewData["SuccessMessage"]</h1>
    </div>
}
else if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <h1>@ViewData["ErrorMessage"]</h1>
    </div>
}

<h1 class="d-flex justify-content-between">
    Email Templates
    <a href="@Url.Action("CreateTemplate", "Template")" class="d-flex align-items-center btn btn-success">Create</a>
</h1>
<br>
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
    <tr>
        <th>Name</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var template in Model)
    {
        <tr>
            <td>@template.template_name</td>
            <td>
                <a href="@Url.Action("EditTemplate", "Template", new { id = template.et_id })" class="btn btn-primary">Edit</a>
                @* <a href="" class="btn btn-danger">Delete</a> *@
                <a href="@Url.Action("DeleteTemplate", "Home", new { id = template.et_id })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>