@{
    Layout = "_Layout";
}

<h1>Creating New Template</h1>
<br>

@using (Html.BeginForm("CreateTemplateEmail", "Template", FormMethod.Post))
{
    
    <div class="mb-3">
        <label for="templateName" class="form-label">Template Name</label>
        <input type="text" class="form-control" id="templateName" name="template_name" placeholder="Template Name">
    </div>
    <div class="mb-3">
        <label for="templateContent" class="form-label">Template Content</label>
        <textarea class="form-control" id="templateContent" name="template_content" rows="3"></textarea>
    </div>
    <div class="mb-3">
        <label for="platformId" class="form-label">Select Platform</label>
        <select class="form-select" id="platformId" name="platform_id">
            <option value="1">Google</option>
            <option value="2">Epic</option>
            <option value="3">Netflix</option>
        </select>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-secondary">Create</button>
    </div>
}
<script>
    $(document).ready(() => {
         tinymce.init({
            selector: '#templateContent',
            plugins: 'advlist autolink lists link image charmap print preview hr anchor',
            toolbar: 'undo redo | formatselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
            height: 300
          });    
    })
</script>


