@model EmailTemplateModel

@{
    Layout = "_Layout";
}
<h1>Editing Template</h1>
<br>


@using (Html.BeginForm("SaveTemplate", "Template", FormMethod.Post))
{
    <input type="hidden" name="et_id" value="@Model.et_id" />
    <div class="mb-3">
        <label for="templateName" class="form-label">Template Name</label>
        <input type="text" class="form-control" id="templateName" name="template_name" placeholder="Template Name" value="@Model.template_name" />
    </div>
    <div class="mb-3">
        <label for="templateContent" class="form-label">Template Content</label>
        <textarea class="form-control" id="templateContent" name="template_content" rows="3">@Model.template_content</textarea>
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-secondary">Save</button>
    </div>
}


<script>
    $(document).ready(() => {
         tinymce.init({
            selector: '#templateContent',
            plugins: 'advlist autolink lists link image charmap print preview hr anchor',
            toolbar: 'undo redo | formatselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
            height: 300
          });    
    })
</script>